@model TicketViewModel

<partial name="_BreadCrumbs" model=@(new []
 {
        ("/","Home"), 
        ("/Ticket","Tickets"),
        ("", "Create")
}) />


<h3 class="mt-4">Create Ticket</h3>

<!-- The form posts back to the TicketController Create POST action --> 
<form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @* <input type="hidden" asp-for="Id" class="form-control"/> *@


    <!-- TBC - complete the form to include a seleclist for StudentId and a text area for the Issue. -->

     <div class="mt-3">
            <label asp-for="StudentId" ></label>
            <select asp-for="StudentId" asp-items="@Model.Students" class="form-select">
                <option disabled selected>--Students Name--</option>
            </select>
            <span asp-validation-for="StudentId" class="text-danger"></span>
        </div>    
          <div class="mt-3">
            <label asp-for="Issue" class="form-label"></label>
             <textarea rows="5" asp-for="Issue" class="form-control"></textarea>
            <span asp-validation-for="Issue" class="text-danger"></span>
          </div>
    <!-- TBC - Add a submit input to post the form and a cancel anchor tag to cancel the form -->
      <div class="mt-3">
        <input type="submit" value="Create" class="btn btn-primary"/>
        <a class="btn btn-danger" asp-action="Index" asp-route-id=@Model.Students>Cancel</a>
    </div> 
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
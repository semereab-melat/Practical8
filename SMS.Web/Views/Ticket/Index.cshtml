@model IList<Ticket>

<partial name="_BreadCrumbs" model=@(new []
 {
        ("/","Home"), 
        ("","Tickets") 
}) />

<div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h3 class="text-primary">Open Tickets List</h2>
            </div>
             <!-- TBC - add an action link styled as a button to navigate to Create Action -->
            <!--       consider supplementing the button text with a suitable icon        --> 
            <div class="col-6 text-end">
                <a class="btn btn-sm btn-primary my-3" asp-controller="Ticket" asp-action="Create">            
                <i class="bi bi-plus-circle"></i> &nbsp;Create New Ticket</a>
            </div>
        </div>
         <br /><br />

<!-- TBC - add a table to display all open tickets and in each tickets action   -->

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Issue</th>
            <th>Created</th>
            <th>Statue</th>           
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Id</td>
                <td>@t.Student.Name</td>
                <td>@t.Issue</td>
                <td>@t.CreatedOn.ToShortDateString()</td>
                @* <td>@t.Active</td> *@
                <td>
                    <!-- Add View link -->
                    <!--column add a Close ticket button wrapped in a form to close a ticket -->
                    <form asp-action="Close"> 
                       <input type="hidden" name="id" value="@t.Id"/>
                       <input type="submit" value="Active" title="Active Ticket" class="btn btn-primary mx-2">  
                       @* <i class="bi bi-x"></i> *@                     
                  </form>                   
                </td>
            </tr>
        }
    </tbody>
</table>


